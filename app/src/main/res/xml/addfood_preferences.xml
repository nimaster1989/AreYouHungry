<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="1. Food">

        <EditTextPreference
            android:defaultValue=""
            app:key="food name"
            app:title="Food Name"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue=""
            app:key="portion"
            app:title="Portion Size"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:defaultValue=""
            app:key="totaltime"
            app:title="Total Time (minutes)"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:defaultValue=""
            app:key="flavour"
            app:title="Flavour"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            app:defaultValue=""
            app:entries="@array/difficulty_entires"
            app:entryValues="@array/difficulty_values"
            app:key="difficulty"
            app:title="Difficulty"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:defaultValue=""
            app:key="ethnicity"
            app:title="Ethnicity"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="2. Favourite">

        <SwitchPreferenceCompat
            app:key="favourite"
            app:title="Set as favourite" />

    </PreferenceCategory>

    <PreferenceCategory app:title="3. Category">

        <MultiSelectListPreference
            app:entries="@array/category_entires"
            app:entryValues="@array/category_values"
            app:key="category"
            app:title="Category"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>
    <PreferenceCategory app:title="4. Image (Optional)">
        <EditTextPreference
            app:key="imageurl"
            app:title="Image URL"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>





</PreferenceScreen>