<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="horizontal|vertical"
    android:visibility="visible"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/specifiedFoodButton"
        android:layout_width="352dp"
        android:layout_height="81dp"
        android:layout_below="@+id/text_home"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="157dp"
        android:onClick="preferredPickOnClick"
        android:text="Preference Search!" />

    <Button
        android:id="@+id/randomFoodButton"
        android:layout_width="352dp"
        android:layout_height="81dp"
        android:layout_below="@+id/specifiedFoodButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="157dp"
        android:onClick="randomPickOnClick"
        android:text="Pick For Me!" />



</RelativeLayout>