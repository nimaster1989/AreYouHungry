<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize" >

    <Button
        android:id="@+id/randomFoodButton"
        android:layout_width="352dp"
        android:layout_height="81dp"
        android:layout_below="@+id/searchView2"
        android:layout_gravity="center"
        android:background="#5156BF"
        android:onClick="randomPickOnClick"
        android:text="@string/pick_for_me" />
    <Button
        android:id="@+id/specifiedFoodButton"
        android:layout_width="352dp"
        android:layout_height="81dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="400dp"
        android:background="#5156BF"
        android:onClick="preferredPickOnClick"
        android:text="@string/preference_search" />



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>