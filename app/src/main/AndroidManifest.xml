<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="comp3350.Group2.areyouhungry">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PreferredSearchActivity" />
        <activity android:name=".AllFoodsActivity" />
        <activity android:name=".RandomActivity" />
        <activity android:name=".PreferredActivity" />
        <activity
            android:name=".FoodListActivity"
            android:label="@string/title_food_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FoodDetailActivity"
            android:label="@string/title_food_detail"
            android:parentActivityName=".FoodListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="comp3350.Group2.areyouhungry.FoodListActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>